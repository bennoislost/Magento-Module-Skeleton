{
    "name": "bennoislost/magento-module-skeleton",
    "type": "magento-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben McManus"
        }
    ],
    "require-dev": {
        "aydin-hassan/magento-core-composer-installer" : "~1.0",
        "magento-hackathon/magento-composer-installer": "^3.0.5",
        "magento/core": "1.9.2.3",
        "bennoislost/magento-developer-meta": "^1.0",
        "squizlabs/php_codesniffer": "^2.6",
        "magento-ecg/coding-standard": "^2.0",
        "behat/behat": "^3.1"
    },
    "autoload": {
        "psr-0": {
            "": [
                "src/magento/app",
                "src/magento/app/code/local",
                "src/magento/app/code/community",
                "src/magento/app/code/core",
                "src/magento/lib"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.firegento.com"
        }
    ],
    "extra": {
        "magento-root-dir": "src/magento",
        "with-bootstrap-patch": false,
        "magento-core-deploy" : {
            "excludes": [
                ".htaccess"
            ]
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
